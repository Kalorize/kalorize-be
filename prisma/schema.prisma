generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("MYSQL_URL")
}

model User {
  id       Int     @id @default(autoincrement())
  email    String  @unique @db.VarChar(255)
  password String  @db.Char(60)
  gender   Gender?
  weight   Float?
  height   Float?
  Otp      Otp?
}

enum Gender {
  MALE
  FEMALE
}

